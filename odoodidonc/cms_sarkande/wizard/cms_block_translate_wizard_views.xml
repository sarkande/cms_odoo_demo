<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Translation Line List View -->
    <record id="view_cms_block_translate_line_list" model="ir.ui.view">
        <field name="name">cms.block.translate.line.list</field>
        <field name="model">cms.block.translate.line</field>
        <field name="arch" type="xml">
            <list editable="bottom" create="0" delete="0">
                <field name="field_label" readonly="1"/>
                <field name="lang_name" readonly="1"/>
                <field name="value"/>
                <!-- Hidden fields -->
                <field name="field_name" column_invisible="1"/>
                <field name="lang_id" column_invisible="1"/>
                <field name="lang_code" column_invisible="1"/>
                <field name="component_model" column_invisible="1"/>
                <field name="component_id" column_invisible="1"/>
                <field name="component_field" column_invisible="1"/>
                <field name="wizard_id" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Wizard Form View -->
    <record id="view_cms_block_translate_wizard_form" model="ir.ui.view">
        <field name="name">cms.block.translate.wizard.form</field>
        <field name="model">cms.block.translate.wizard</field>
        <field name="arch" type="xml">
            <form string="Traduire le bloc">
                <sheet>
                    <group>
                        <field name="block_id" invisible="1"/>
                        <field name="block_type" invisible="1"/>
                        <field name="lang_ids" widget="many2many_tags"/>
                    </group>

                    <notebook>
                        <page string="Traductions par langue">
                            <field name="translation_line_ids" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Sauvegarder" type="object" name="action_save_translations" class="btn-primary"/>
                    <button string="Annuler" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_cms_block_translate_wizard" model="ir.actions.act_window">
        <field name="name">Traduire le bloc</field>
        <field name="res_model">cms.block.translate.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_cms_block"/>
        <field name="binding_view_types">form</field>
    </record>
</odoo>
