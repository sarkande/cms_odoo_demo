<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_cms_translation_key_list" model="ir.ui.view">
        <field name="name">cms.translation.key.list</field>
        <field name="model">cms.translation.key</field>
        <field name="arch" type="xml">
            <list string="Translation Keys">
                <field name="key"/>
                <field name="description"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_cms_translation_key_form" model="ir.ui.view">
        <field name="name">cms.translation.key.form</field>
        <field name="model">cms.translation.key</field>
        <field name="arch" type="xml">
            <form string="Translation Key">
                <sheet>
                    <group>
                        <group>
                            <field name="key"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Translations">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="lang_id"/>
                                    <field name="value" widget="text"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_cms_translation_key" model="ir.actions.act_window">
        <field name="name">Translations</field>
        <field name="res_model">cms.translation.key</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_cms_translations" name="Translations" parent="menu_cms_root" action="action_cms_translation_key" sequence="30"/>
</odoo>
