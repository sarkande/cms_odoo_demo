<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- list View -->
    <record id="view_cms_page_list" model="ir.ui.view">
        <field name="name">cms.page.list</field>
        <field name="model">cms.page</field>
        <field name="arch" type="xml">
            <list string="CMS Pages">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="slug"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_cms_page_form" model="ir.ui.view">
        <field name="name">cms.page.form</field>
        <field name="model">cms.page</field>
        <field name="arch" type="xml">
            <form string="CMS Page">
                <header>
                    <button name="action_open_translate_wizard"
                            string="Traduire"
                            type="object"
                            class="btn-primary"
                            icon="fa-language"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="slug"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="title"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="meta_description"/>
                    </group>
                    <notebook>
                        <page string="Blocks">
                            <field name="block_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="block_type"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_cms_page" model="ir.actions.act_window">
        <field name="name">CMS Pages</field>
        <field name="res_model">cms.page</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_cms_root" name="CMS" sequence="10"/>
    <menuitem id="menu_cms_pages" name="Pages" parent="menu_cms_root" action="action_cms_page" sequence="10"/>
</odoo>
